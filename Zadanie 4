#include <stdio.h>
#include <iostream>
#include <cstring>
using namespace std;

int main()
{
// Часть 1
    string numbers[10];
    numbers[0]="Zero";
    numbers[1]="One";
    numbers[2]="Two";
    numbers[3]="Three";
    numbers[4]="Four";
    numbers[5]="Five";
    numbers[6]="Six";
    numbers[7]="Seven";
    numbers[8]="Eight";
    numbers[9]="Nine";

    int input;
    cin >> input;
    cout<< "Answer is: " << numbers[input]<<"\n";
        
// Часть 2
    char Signs[128];
    char *Mark;
    Mark = Signs;
    cout << "Enter text: \n";
    cin >> Signs;
    int Length = strlen(Signs);
    int number;
    cout<<"\n"<<"Shifted text: ";
    for(int z =0; z<=Length; z++)
        {
            number = (int)*(Mark+z);
        number++;
        cout<< (char)number;
        }   
    return 0;
}
