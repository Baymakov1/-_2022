#include <stdio.h>
#include <iostream>
#include <cstring>
using namespace std;

int main()
{
// Часть 1
    string numbers[10];
    numbers[0]="Zero";
    numbers[1]="One";
    numbers[2]="Two";
    numbers[3]="Three";
    numbers[4]="Four";
    numbers[5]="Five";
    numbers[6]="Six";
    numbers[7]="Seven";
    numbers[8]="Eight";
    numbers[9]="Nine";

    int input;
    cin >> input;
    cout<< "Answer is: " << numbers[input]<<"\n";
        
// Часть 2
    string Signs;
    string *Mark;
    Mark = &Signs;
    cout << "Enter text: \n";
    cin >> Signs;
    for(int z =0; z<Signs.size(); z++)
        {
        Signs[z]++;
        }       
    Mark+=1;
    cout<<"\n"<<"Shifted text: " << Signs;
    
    
    return 0;
}
